#!/usr/bin/env bash
#MISE description="Run plugin tests - install and execute tool"
set -euo pipefail

mise plugin link --force utoo .
mise cache clear
mise install utoo@1.0.7

# Capture and display the output while also verifying it
output=$(mise exec "utoo@1.0.7" -- "utoo" --version)
echo "utoo output: $output"

if echo "$output" | grep -q '1.0.7'; then
    echo "✓ Tests passed"
else
    echo "✗ Test failed: expected version utoo@1.0.7"
    exit 1
fi
